alignment top_left
background no
border_width 1
cpu_avg_samples 2
default_color white
default_outline_color white
default_shade_color white
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=12
#xftfont Sans:style=Bold:size=10
gap_x 5
gap_y 60
minimum_size 5 5
net_avg_samples 2
no_buffers yes
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class Conky
own_window_type desktop
own_window_transparent yes
stippled_borders 0
update_interval 5.0
uppercase no
use_spacer right
show_graph_scale no
show_graph_range no

TEXT
${nodename}
$hr
${color grey}Uptime:$color $uptime
${color grey}Frequency (in MHz):$color $freq
${color grey}Frequency (in GHz):$color $freq_g
${color grey}RAM Usage:$color $mem/$memmax - $memperc%
${color grey}Swap Usage:$color $swap/$swapmax - $swapperc%
${color grey}CPU Usage:$color $cpu%
${color grey}Processes:$color $processes  ${color grey}Running:$color $running_processes
$hr
${color grey}File systems:
 /home $color${fs_used /}/${fs_size /} ${fs_bar 4 /}
${color grey}Networking:
Up:$color ${upspeed eth0} ${color grey} - Down:$color ${downspeed eth0}
$hr
${color grey}Qualcomm: $color ${execpi 5 mu find --nocolor flag:unread m:/Qualcomm/INBOX 2>/dev/null | wc -l}
${color grey}Gmail:    $color ${execpi 5 mu find --nocolor flag:unread m:/Gmail/INBOX AND NOT list 2>/dev/null | wc -l} (${execpi 5 mu find --nocolor flag:unread m:/Gmail/INBOX AND list 2>/dev/null | wc -l} in groups)
